<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Listing", properties_path, class: "sidebar-link active" %></li>
			<!-- <li class="sidebar-item"><%= link_to "Your Reservation", your_reservations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Place", your_places_path, class: "sidebar-link" %></li> -->
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Listings
			</div>
			<div class="panel-body">

				<% @properties.each do |property| %>
					<div class="row">
						<div class="col-md-2">
							<%= image_tag property.show_first_photo(:thumb) %>
						</div>
						<div class="col-md-7">
							<h4><%= property.listing_name %></h4>
						</div>
						<div class="col-md-3 right">
							<%= link_to "Update", edit_property_path(property), class: "btn btn-primary" %>
						</div>
					</div>
					<hr>
				<% end %>

			</div>
		</div>
	</div>
</div>
