<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listing", properties_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Offers", your_reservations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Requests", your_places_path, class: "sidebar-link active" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Your Requests To Book A Place
			</div>
			<div class="panel-body">

				<% @places.each do |place| %>
					<div class="row">
						<div class="col-md-2">
              <%= place.start_date.strftime('%v') %>
            </div>
            <div class="col-md-6">
              <%= link_to property_path(place.property) do %>
                <%= image_tag place.property.show_first_photo(:thumb) %>
              <% end %>
            </div>
            <div class="col-md-2">
              <%= link_to user_path(place.property.user) do %>
              <%= image_tag avatar_url(place.property.user), class: "img-circle avatar-medium" %>
              <% end %>
            </div>
            <div class="col-md-2 right">
              <h4>$<%= place.total %></h4>
            </div>
					</div>
					<hr>
				<% end %>

			</div>
		</div>
	</div>
</div>
