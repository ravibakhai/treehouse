<div class="text-center">
  <h2> Featured Listings </h2>
</div>

<div class = "row">

  <% @properties.each do |property| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading preview">
          <%= image_tag property.show_first_photo(:medium) %>
        </div>
        <div class="panel-body">
          <%= image_tag avatar_url(property.user), class: "img-circle avatar-small" %>&nbsp;
          <%= link_to property.listing_name, property_path(property)%>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  $(function() {
    $("start_date").datepicker({
      dateFormat: 'dd-mm-yy'
      minDate: 0,
      maxDate: '12m',
      onSelect: function(selected) {
        $('#end_date').datepicker("option", "minDate", selected);
        $('#end_date').attr('disabled', false);
      }
    });

    $("end_date").datepicker({
      dateFormat: 'dd-mm-yy'
      minDate: 0,
      maxDate: '12m',
      onSelect: function(selected) {
        $('#start_date').datepicker("option", "minDate", selected);
        $('#start_date').attr('disabled', false);
      }
    });
  })

</script>
